<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WeatherLogger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.Item" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent.Item</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.ItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">@style/TextAppearance.ItemText</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_25</item>
        <item name="android:paddingTop">@dimen/vertical_margin_25</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_25</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_25</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/component_background_dark</item>
        <item name="android:textColor">@color/component_text_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/component_ripple</item>
        <item name="android:padding">16dp</item>
        <item name="strokeColor">@color/component_dark</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SmallComponent.NoCorner</item>
    </style>

    <style name="ShapeAppearance.MediumComponent.Item" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/corner</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.SmallComponent.NoCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="TextAppearance.ItemText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/odibee_sans</item>
        <item name="android:fontFamily">@font/odibee_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/odibee_sans</item>
        <item name="android:fontFamily">@font/odibee_sans</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>